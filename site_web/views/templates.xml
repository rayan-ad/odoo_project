<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="template_page_home" model="ir.ui.view">
        <field name="name">Accueil Site Web</field>
        <field name="type">qweb</field>
        <field name="key">velo_amis.template_page_home</field>
        <field name="arch" type="xml">
            <t t-name="velos_amis.template_page_home">
                <t t-call="website.layout">
                    <t t-set="title">Vélo Amis</t>
                    <div id="wrap" class="oe_structure">
                        <section class="container my-5">
                            <h1>Vélo Amis</h1>
                            <p>Vente de vélos, accessoires &amp; location — par trois amis passionnés.</p>
                            <p>
                                <a class="btn btn-primary" href="/shop">Voir la boutique</a>
                                <a class="btn btn-secondary" href="/contactus">Contact</a>
                            </p>
                        </section>
                    </div>
                </t>
            </t>
        </field>
    </record>

    <record id="website_page_home" model="website.page">
        <field name="name">Accueil</field>
        <field name="website_published">True</field>
        <field name="url">/</field>
        <field name="view_id" ref="template_page_home"/>
    </record>
</odoo>