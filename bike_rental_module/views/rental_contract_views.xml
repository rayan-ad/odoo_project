<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        Vues et menus pour la gestion des contrats de location

        Ce fichier définit :
        - Les vues liste, formulaire et calendrier pour les contrats
        - Les actions pour ouvrir ces vues
        - La structure des menus dans l'interface Odoo
        - Les configurations spécifiques pour la disponibilité et la tarification

        Organisation des menus :
        Location (menu principal)
        ├── Contrats de location
        ├── Disponibilité (vue calendrier)
        ├── Vélos à louer
        └── Tarification
    -->

    <!-- =========================
         ACTION + MENUS CONTRATS
         ========================= -->

    <!-- Action pour ouvrir les contrats de location -->
    <record id="action_rental_contract" model="ir.actions.act_window">
        <field name="name">Contrats de location</field>
        <field name="res_model">rental.contract</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_rental_contract_list"/>
        <field name="help" type="html">
            <p>Gérez ici vos contrats de location de vélos.</p>
        </field>
    </record>

    <!-- Menu principal Location -->
    <menuitem id="menu_rental_root"
              name="Location"
              sequence="20"/>

    <!-- Sous-menu Contrats de location -->
    <menuitem id="menu_rental_contract"
              name="Contrats de location"
              parent="menu_rental_root"
              action="action_rental_contract"
              sequence="10"/>

    <!-- =========================
         VUES CONTRAT DE LOCATION
         ========================= -->

    <!-- Vue liste -->
    <record id="view_rental_contract_list" model="ir.ui.view">
        <field name="name">rental.contract.list</field>
        <field name="model">rental.contract</field>
        <field name="arch" type="xml">
            <list string="Contrats de location" decoration-danger="is_late">
                <field name="name"/>
                <field name="state"/>
                <field name="bike_id"/>
                <field name="customer_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="price"/>
                <field name="is_late"/>
                <field name="late_hours"/>
                <field name="invoice_id"/>
            </list>
        </field>
    </record>

    <!-- Vue formulaire des contrats de location

         Fonctionnalités principales :
         - Header avec boutons d'action (imprimer, facturer, workflow)
         - Barre de statut affichant l'état du contrat
         - Sections organisées : infos générales, période, durée, tarification, facturation
         - Calculs automatiques affichés en lecture seule
         - Bouton "Créer facture" qui disparaît après création (invisible si invoice_id existe)
    -->
    <record id="view_rental_contract_form" model="ir.ui.view">
        <field name="name">rental.contract.form</field>
        <field name="model">rental.contract</field>
        <field name="arch" type="xml">
            <form string="Contrat de location">
                <header>
                    <!-- Bouton pour imprimer le contrat PDF -->
                    <button name="action_print_contract" string="Imprimer contrat" type="object" class="btn-primary"/>

                    <!-- Bouton pour générer une facture Odoo
                         Disparaît automatiquement après création (invisible="invoice_id")
                         Évite la duplication de factures -->
                    <button name="action_create_invoice" string="Créer facture Odoo" type="object"
                            class="btn-primary"
                            invisible="invoice_id"/>

                    <button name="action_confirm" type="object" string="Confirmer" class="btn-primary"/>
                    <button name="action_start" type="object" string="Démarrer" class="btn-primary"/>
                    <button name="action_done" type="object" string="Terminer" class="btn-success"/>
                    <button name="action_cancel" type="object" string="Annuler" class="btn-secondary"/>
                    <button name="action_reset_draft" type="object" string="Remettre en brouillon" class="btn-secondary"/>

                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed,ongoing,done,cancel"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name"/></h1>
                    </div>

                    <group>
                        <group string="Informations générales">
                            <field name="bike_id"/>
                            <field name="customer_id"/>
                        </group>

                        <group string="Période">
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="billing_unit"/>
                        </group>
                    </group>

                    <group string="Durée">
                        <field name="duration_hours" readonly="1"/>
                        <field name="duration_days" readonly="1"/>
                    </group>

                    <group string="Tarification">
                        <field name="unit_price" readonly="1"/>
                        <field name="price" readonly="1"/>
                    </group>

                    <group string="Facturation" invisible="not invoice_id">
                        <field name="invoice_id" readonly="1"/>
                    </group>

                    <group string="Notes">
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- =========================
         DISPONIBILITÉ (CALENDRIER)
         ========================= -->

    <!-- Vue calendrier pour visualiser la disponibilité des vélos

         Cette vue affiche les périodes de location dans un calendrier
         avec une couleur différente par vélo (color="bike_id").

         Permet de :
         - Voir rapidement quels vélos sont loués et quand
         - Identifier les créneaux disponibles
         - Détecter visuellement les périodes de forte demande

         Les événements s'étendent de date_start à date_stop.
    -->
    <record id="view_rental_contract_calendar" model="ir.ui.view">
        <field name="name">rental.contract.calendar</field>
        <field name="model">rental.contract</field>
        <field name="arch" type="xml">
            <calendar string="Disponibilité des vélos"
                      date_start="start_date"
                      date_stop="end_date"
                      color="bike_id">
                <field name="name"/>
                <field name="bike_id"/>
                <field name="customer_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Action: disponibilité (calendrier en premier) -->
    <record id="action_rental_contract_availability" model="ir.actions.act_window">
        <field name="name">Disponibilité</field>
        <field name="res_model">rental.contract</field>
        <field name="view_mode">calendar,list,form</field>
        <field name="domain">[('state', '!=', 'draft')]</field>
        <field name="view_id" ref="view_rental_contract_calendar"/>
    </record>

    <!-- Sous-menu Disponibilité -->
    <menuitem id="menu_rental_availability"
              name="Disponibilité"
              parent="menu_rental_root"
              action="action_rental_contract_availability"
              sequence="20"/>

    <!-- =========================
         VÉLOS À LOUER
         ========================= -->

    <record id="view_product_template_list_rental_bikes" model="ir.ui.view">
        <field name="name">product.template.list.rental.bikes</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <list string="Vélos à louer">
                <field name="name"/>
                <field name="categ_id"/>
                <field name="rental_available"/>
                <field name="rental_price_hour"/>
                <field name="rental_price_day"/>
            </list>
        </field>
    </record>

    <record id="action_rental_bikes" model="ir.actions.act_window">
        <field name="name">Vélos à louer</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_product_template_list_rental_bikes"/>
        <field name="domain">[('categ_id.name', '=', 'Velos'),
                              ('rental_available', '=', True)]</field>
    </record>

    <menuitem id="menu_rental_bikes"
              name="Vélos à louer"
              parent="menu_rental_root"
              action="action_rental_bikes"
              sequence="30"/>

    <!-- =========================
         TARIFICATION
         ========================= -->

    <record id="view_product_template_list_rental_tariff" model="ir.ui.view">
        <field name="name">product.template.list.rental.tariff</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <list string="Tarification location">
                <field name="name"/>
                <field name="categ_id"/>
                <field name="rental_available"/>
                <field name="rental_price_hour"/>
                <field name="rental_price_day"/>
            </list>
        </field>
    </record>

    <record id="action_rental_pricing" model="ir.actions.act_window">
        <field name="name">Tarification</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_product_template_list_rental_tariff"/>
        <field name="domain">[('categ_id.name', '=', 'Velos')]</field>
    </record>

    <menuitem id="menu_rental_pricing"
              name="Tarification"
              parent="menu_rental_root"
              action="action_rental_pricing"
              sequence="40"/>

</odoo>
